<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:background="@drawable/info_back"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mark_id"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/text_file_send"
            android:gravity="center"
            android:text="16"
            android:textColor="@color/text_green"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#eee" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mark_filenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编 号：皖N3333"
                android:textColor="@color/text_deep"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mark_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="题 目：75km/h"
                android:textColor="@color/text_deep"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_item_back"
            android:text="查看详情"
            android:gravity="center_vertical"
            android:textColor="#00A1E9"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>