<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wq.purchaseinfo.view.WeekCalendar
        android:id="@+id/week_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerBgColor="#fff"
        app:headerHeight="48dp"
        app:calendarHeight="55dp"
        app:show_week="false"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/tv_week_change"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"/>


    <TextView
        android:id="@+id/tv_select_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"/>

    <Button
        android:id="@+id/btn_add_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addEvent"
        android:text="添加一个事件"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoDate"
        android:text="跳转到指定日期"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="setSelectDate"
        android:text="设置指定日期为选中日期"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gotoToday"
        android:text="回到今天"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getCurrentFirstDay"
        android:text="获取当前页面第一天"/>

    <TextView
        android:id="@+id/tv_current_firstday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>